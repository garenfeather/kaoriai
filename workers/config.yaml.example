# Worker配置文件示例

# API服务器配置
server:
  base_url: "http://localhost:8080"  # API服务器地址
  timeout: 30                        # 请求超时(秒)

# Worker通用配置
worker:
  check_interval: 60    # 检查间隔(秒)
  batch_size: 100       # 批量上传大小
  data_dir: "./data"    # 数据目录
  temp_dir: "./temp"    # 临时目录

# 安全配置
security:
  worker_token: "your-worker-token-here"  # Worker访问API的Token

# 日志配置
logging:
  level: "info"         # 日志级别: debug, info, warn, error
  output: "stdout"      # 输出: stdout, file
  file: "./worker.log"  # 日志文件路径(当output=file时)
